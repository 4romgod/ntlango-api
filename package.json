{
  "name": "ntlango-api",
  "version": "1.0.0",
  "description": "",
  "main": "./dist/index.js",
  "scripts": {
    "build": "npm run lint && rm -rf dist/ && npx tsc",
    "start": "npm run build && node --trace-warnings dist/index.js",
    "dev": "nodemon ./lib/index.ts",
    "test": "nyc mocha",
    "watch": "nyc mocha",
    "lint": "npm run prettier-format && eslint lib/* --ext .ts --fix",
    "prettier-format": "npm run prettier-format-lib && npm run prettier-format-test",
    "prettier-format-lib": "prettier --no-error-on-unmatched-pattern --config .prettierrc.json 'lib/**/*.{js,ts}' --write",
    "prettier-format-test": "prettier --no-error-on-unmatched-pattern --config .prettierrc.json 'test/**/*.{js,ts}' --write"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "include": [
      "lib/**/*.js",
      "lib/**/*.ts"
    ],
    "reporter": [
      "cobertura",
      "text",
      "lcov"
    ],
    "require": [
      "ts-node/register"
    ],
    "all": true,
    "sourceMap": true,
    "produce-source-map": true
  },
  "dependencies": {
    "aws-sdk": "^2.1166.0",
    "body-parser": "^1.20.0",
    "dotenv": "^16.0.1",
    "express": "^4.18.1"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/chai": "^4.3.1",
    "@types/express": "^4.17.13",
    "@types/mocha": "^9.1.1",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.44",
    "@types/sinon": "^10.0.12",
    "@typescript-eslint/eslint-plugin": "^5.30.4",
    "@typescript-eslint/parser": "^5.30.4",
    "chai": "^4.3.6",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-unused-imports": "^2.0.0",
    "mocha": "^10.0.0",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.16",
    "nyc": "^15.1.0",
    "sinon": "^14.0.0",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.3"
  }
}
