{
  "name": "@ntlango/api",
  "version": "1.0.0",
  "description": "This repository contains the business logic for the API",
  "main": "./dist/server.js",
  "scripts": {
    "build": "npm run lint && npm run test && tsc --pretty",
    "clean": "rm -rf generated-client dist coverage .nyc_output",
    "start": "npm run build && node --trace-warnings dist/lib/server.js",
    "dev": "nodemon ./lib/server.ts",
    "test": "nyc mocha --exit",
    "watch": "nyc mocha",
    "lint": "eslint lib/* --ext .ts --fix",
    "format": "prettier --no-error-on-unmatched-pattern --config .prettierrc.json 'lib/**/*.{js,ts}' 'test/**/*.{js,ts}' --write"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "include": [
      "lib/**/*.js",
      "lib/**/*.ts"
    ],
    "reporter": [
      "cobertura",
      "text",
      "lcov"
    ],
    "require": [
      "ts-node/register"
    ],
    "all": true,
    "sourceMap": true,
    "produce-source-map": true
  },
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.403.0",
    "body-parser": "^1.20.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-validator": "^6.14.2",
    "mongoose": "^7.4.5",
    "neo4j-driver": "^4.4.7",
    "slugify": "^1.6.6"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/chai": "^4.3.1",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/mocha": "^9.1.1",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.44",
    "@types/proxyquire": "^1.3.28",
    "@types/sinon": "^10.0.12",
    "@typescript-eslint/eslint-plugin": "^5.30.4",
    "@typescript-eslint/parser": "^5.30.4",
    "aws-sdk-mock": "^5.7.0",
    "chai": "^4.3.6",
    "chai-http": "^4.3.0",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-unused-imports": "^2.0.0",
    "mocha": "^10.0.0",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.16",
    "nyc": "^15.1.0",
    "proxyquire": "^2.1.3",
    "sinon": "^14.0.0",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.3"
  }
}
